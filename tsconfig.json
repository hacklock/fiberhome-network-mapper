{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "examples"
    ],
    "lib": [
      
  ]
}